<?xml version='1.0' encoding='utf-8'?>
<widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "org.pacioos.voyager"
        versionCode="100" 
        version   = "1.0.0">
    <name>PacIOOS Voyager</name>
    <description>
        Map and access real-time ocean observations, forecasts, and related information for U.S. interests in the Pacific. From the Pacific Islands Ocean Observing System (PacIOOS).
    </description> 
    <author email="jmaurer@hawaii.edu" href="http://pacioos.org">John Maurer</author>
    <preference name="permissions" value="none" />
    <preference name="orientation" value="default" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="false" />
    <preference name="webviewbounce" value="true" />
    <preference name="prerendered-icon" value="false" />
    <preference name="stay-in-webview" value="false" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="disable-cursor" value="false" />
    <preference name="android-minSdkVersion" value="7" />
    <preference name="android-installLocation" value="auto" />
    <icon src="icon.png" />
    <icon gap:platform="android" gap:density="ldpi" src="img/voyager_icon_36.png" width="36" height="36" />
    <icon gap:platform="android" gap:density="mdpi" src="img/voyager_icon_48.png" width="48" height="48" />
    <icon gap:platform="android" gap:density="hdpi" src="img/voyager_icon_72.png" width="72" height="72" />
    <icon gap:platform="android" gap:density="xhdpi" src="img/voyager_icon_96.png" width="96" height="96" />
    <icon gap:platform="blackberry" src="img/voyager_icon_80.png" width="80" height="80" />
    <icon gap:platform="blackberry" gap:state="hover" src="img/voyager_icon_80.png" width="80" height="80" />
    <icon gap:platform="ios" src="img/voyager_icon_57.png" width="57" height="57" />
    <icon gap:platform="ios" src="img/voyager_icon_72.png" width="72" height="72" />
    <icon gap:platform="ios" src="img/voyager_icon_76.png" width="76" height="76" />
    <icon gap:platform="ios" src="img/voyager_icon_114.png" width="114" height="114" />
    <icon gap:platform="ios" src="img/voyager_icon_120.png" width="120" height="120" />
    <icon gap:platform="ios" src="img/voyager_icon_144.png" width="144" height="144" />
    <icon gap:platform="ios" src="img/voyager_icon_152.png" width="152" height="152" />
    <icon gap:platform="webos" src="img/voyager_icon_64.png" width="64" height="64" />
    <icon gap:platform="winphone" src="img/voyager_icon_48.png" width="48" height="48" />
    <gap:splash src="splash.png" />
    <gap:splash gap:platform="android" gap:density="ldpi" src="img/splash/android/screen-ldpi-portrait.png" width="200" height="320" />
    <gap:splash gap:platform="android" gap:density="ldpi" src="img/splash/android/screen-ldpi-landscape.png" width="320" height="200" />
    <gap:splash gap:platform="android" gap:density="mdpi" src="img/splash/android/screen-mdpi-portrait.png" width="320" height="480" />
    <gap:splash gap:platform="android" gap:density="mdpi" src="img/splash/android/screen-mdpi-landscape.png" width="480" height="320" />
